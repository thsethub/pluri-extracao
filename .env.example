# ============================================================
# PLURI EXTRAÇÃO - Variáveis de Ambiente
# ============================================================
# Copie este arquivo para .env e preencha os valores

# ── OpenAI (usado pela API de Classificação) ──────────────────
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0

# ── Aplicação ─────────────────────────────────────────────────
LOG_LEVEL=INFO
MAX_RETRIES=3
RETRY_DELAY=1

# ── Disciplinas ───────────────────────────────────────────────
DISCIPLINES=Artes,Biologia,Ciências,Educação Física,Espanhol,Filosofia,Física,Geografia,História,Língua Inglesa,Língua Portuguesa,Matemática,Natureza e Sociedade,Química,Sociologia

# ── MySQL (leitura - banco de questões) ───────────────────────
DB_HOST=seu-host-mysql.rds.amazonaws.com
DB_PORT=3306
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_NAME=trieduc

# ── PostgreSQL (escrita - assuntos classificados) ─────────────
PG_HOST=postgres
PG_PORT=5432
PG_USER=pluri
PG_PASSWORD=pluri123
PG_NAME=pluri_assuntos

# ── SuperProfessor (usado pelo Webscraping) ───────────────────
SUPERPRO_EMAIL=seu@email.com
SUPERPRO_PASSWORD=sua_senha
SUPERPRO_BASE_URL=https://superprofessor.com.br

# ── API da Extração ──────────────────────────────────────────
API_BASE_URL=http://api:8000

# ── Comportamento do Agente ──────────────────────────────────
DELAY_MIN=3
DELAY_MAX=7
DELAY_AFTER_LOGIN=5
NAVIGATION_TIMEOUT=30
MAX_CONSECUTIVE_ERRORS=5
LONG_PAUSE_SECONDS=300
MAX_QUESTIONS_PER_SESSION=0

# ── Browser ──────────────────────────────────────────────────
HEADLESS=true
